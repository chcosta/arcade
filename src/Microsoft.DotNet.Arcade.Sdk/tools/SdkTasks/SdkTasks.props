<Project>

  <PropertyGroup>
    <_SdkTaskDesktopTargetFrameworkMoniker Condition="'$(_SdkTaskDesktopTargetFrameworkMoniker)' == ''">$(TargetFramework)</_SdkTaskDesktopTargetFrameworkMoniker>
    <_SdkTaskCoreTargetFrameworkMoniker Condition="'$(_SdkTaskCoreTargetFrameworkMoniker)' == ''">netcoreapp2.1</_SdkTaskCoreTargetFrameworkMoniker>

    <_SdkTaskPackageBaseDir>$(NuGetPackageRoot)$(_SdkTaskPackageName)\$(_SdkTaskPackageVersion)\tools\</_SdkTaskPackageBaseDir>
    <_SdkTaskPackageDir>$(_SdkTaskPackageBaseDir)$(_SdkTaskDesktopTargetFrameworkMoniker)\</_SdkTaskPackageDir>
    <_SdkTaskPackageDir Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SdkTaskPackageBaseDir)$(_SdkTaskCoreTargetFrameworkMoniker)\</_SdkTaskPackageDir>
    <_SdkTaskAssemblyFile>$(_SdkTaskPackageDir)$(_SdkTaskPackageName).dll</_SdkTaskAssemblyFile>
  </PropertyGroup>

  <ItemGroup Condition="'$(ExcludeSdkTaskPackageReference)' != 'true'">
    <PackageReference Include="$(_SdkTaskPackageName)" Version="$(_SdkTaskPackageVersion)" />
  </ItemGroup>

</Project>
