<Project>
  <Import Project="RepoLayout.props" />
  <Import Project="BuildTasks.props" />
  <UsingTask TaskName="Microsoft.DotNet.Arcade.Sdk.GenerateDotNetVersionsPropsFile" AssemblyFile="$(ArcadeSdkBuildTasksAssembly)" />

  <Target Name="GenerateDotNetVersionsPropsFile"
          AfterTargets="__WriteToolsetLocation">
    <GenerateDotNetVersionsPropsFile
      DotNetVersionPropsPath="$(ArtifactsToolsetDir)DotNetCoreVersions.Generated.props"
      GlobalJsonPath="$(RepoRoot)global.json" />
  </Target>
</Project>