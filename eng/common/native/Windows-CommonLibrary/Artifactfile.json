{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
    "title": "CommonLibrary",
    "publisher": "Microsoft",
    "description": "Install CommonLibrary from Azure storage",
    "tags": [
        "Windows",
        "CommonLibrary"
    ],
    "targetOsType": "Windows",
    "parameters": {
        "InstallDirectory": {
            "type": "string",
            "displayName": "InstallPath",
            "defaultValue": "C:\\nativetools\\commonlibrary"
        }
    },
    "runCommand": {
        "commandToExecute": "[concat('powershell.exe -NoProfile -NoLogo -ExecutionPolicy ByPass \"& ./install-commonlibrary.ps1 -InstallDirectory \"', parameters('InstallDirectory'), '\"')]"
    }
}